{
  "$id": "https://dalpelabs.net/schemas/cgen",
  "type": "object",
  "properties": {
    "generators": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "samples": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "name",
          "samples"
        ]
      }
    },
    "pipelines": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "functions": {
            "type": "array",
            "items": {
              "anyOf": [
                {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    }
                  }
                }
              ]
            }
          }
        },
        "required": [
          "name",
          "functions"
        ]
      }
    },
    "outputs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "console",
              "devnull",
              "file",
              "http",
              "kafka",
              "postgresql",
              "s3",
              "splunkhec",
              "syslog",
              "tcp",
              "udp"
            ]
          },
          "config": {
            "type": "object"
          }
        },
        "required": [
          "name",
          "type"
        ]
      }
    },
    "routes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "generator": {
            "type": "string"
          },
          "pipelines": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "generator",
          "output"
        ],
        "anyOf": [
          {
            "output": {
              "type": "string"
            }
          },
          {
            "output": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string"
              }
            }
          }
        ]
      }
    }
  }
}
